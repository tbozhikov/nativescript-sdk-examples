<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" navigatedTo="onNavigatedTo">
	<Page.actionBar>
		<ActionBar title="{{ actionBarTitle }}" icon="" class="action-bar">
		</ActionBar>
	</Page.actionBar>
	<GridLayout rows="*, *" columns="*" class="m-20" loaded="onGridLoaded" unloaded="onGridUnloaded">
		<Label row="0" text="{{ 'Using orientationChanged event \nCurrent orientation: ' + orientation }}" textWrap="true" />
		<Label row="1" text="{{ info }}" textWrap="true" />
	</GridLayout>
</Page>
