<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="NativeScript Core Cookbook" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <ListView items="{{ links }}" class="list-group" loaded="{{ onListLoaded }}" itemLoading="{{ onItemLoading }}" itemTap="{{ onItemTap }}">
        <ListView.itemTemplate>
            <GridLayout class="list-group-item">
                <Label text="{{ title }}" class="list-group-item-heading"></Label>
            </GridLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>
